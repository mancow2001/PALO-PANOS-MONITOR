# PAN-OS Multi-Firewall Monitor Configuration
# Replace the values below with your actual firewall details

global:
  # Storage and output settings
  output_dir: "/var/lib/panos-monitor/output"              # Absolute path for service
  output_type: "CSV"                  # Export format: CSV, XLSX, TXT
  database_path: "/var/lib/panos-monitor/data/metrics.db"  # Absolute path for service
  
  # Web interface settings
  web_dashboard: true                 # Enable web dashboard
  web_port: 8080                     # Dashboard port
  
  # Visualization and debugging
  visualization: true                 # Generate PNG charts on export
  save_raw_xml: false                # Save XML debug files
  xml_retention_hours: 24            # Hours to keep XML files
  log_level: "INFO"                  # Changed from WARNING to INFO for better logging

# Your firewall configurations
firewalls:
  # Production datacenter firewall
  datacenter_fw:
    host: "https://10.100.192.3"
    username: "user1-api"
    password: "SecretPassword"
    verify_ssl: false
    enabled: true
    poll_interval: 60
  
  # Branch office firewall
  branch_fw:
    host: "https://10.100.192.200"
    username: "admin"
    password: "SecretPassword"
    verify_ssl: false
    enabled: true
    poll_interval: 60
  
  # Development environment (disabled)
  dev_fw:
    host: "https://192.168.100.1"
    username: "admin"
    password: "DevPassword"
    verify_ssl: true
    enabled: false
    poll_interval: 60
